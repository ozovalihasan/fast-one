<%= turbo_stream.append "notice" do %>
    <%= render partial: "layouts/alert", locals: { information: "#{@order_item.product.name} is removed." } %>
<% end %>


<% if @cart.order_items.empty? %>
    <%= turbo_stream.replace "order_items_list" do %>
        <%= render 'checks/order_items/no_item' %>
    <% end %>
<% else %>
    <%= turbo_stream.remove dom_id @order_item %>
<% end %>


    
<%= turbo_stream.update "total_price", @cart.total_price %>
<%= turbo_stream.replace "cart-counter" do %>
    <%= render partial: "cart/cart_counter" %>
<% end %>
