<%= turbo_stream.replace "products" do %>
    <% if @products.empty? %>
        <div class="text-center w-full" id="products">
            No result for "<%= params[:search_term] %>"
        </div>
    <% else %>
        <div class="flex flex-wrap justify-center" id="products">
            <%= render partial: "products/product", collection: @products %>
        </div>
    <% end %>
<% end %>