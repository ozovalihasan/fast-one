<%= form_with(model: product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: "bg-first-100" %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "bg-first-100" %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, class: "bg-first-100" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, class: "bg-first-100" %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name", selected: product.category.id)  %>
  </div>
  
  <% if admin_signed_in? %>
    <div class="field">
      <%= f.label :seller_id %>
      <%= f.select :seller_id, options_from_collection_for_select(@sellers, "id", "email", selected: product.seller.id)  %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
