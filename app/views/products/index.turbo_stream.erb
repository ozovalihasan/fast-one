<%= turbo_stream.append "notice" do %>
     <% flash.each do |type, msg| %>
        <%= render partial: "layouts/alert", locals: { information: msg } %>
      <% end %>
<% end %>


<% if @page == 1  %>
    <%= turbo_stream.replace "primary" do %>
        <%= render 'products/list' %>
    <% end %>
<% else %>
    <%= turbo_stream.append "products" do %>
        <%= render 'products/infinite_scroll' %>
    <% end %>
<% end %>
