<%= turbo_stream.append "notice" do %>
    <%= render partial: "layouts/alert", locals: { information: "#{@order_item.product.name} is added." } %>
<% end %>
<%= turbo_stream.replace "cart-counter" do %>
    <%= render partial: "cart/cart_counter" %>
<% end %>
<%= turbo_stream.replace "order-item-form" do %>
    <%= render partial: "products/form", locals: { order_item: @order_item} %>
<% end %>

